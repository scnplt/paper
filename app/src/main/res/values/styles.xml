        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/mali_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/mali_light</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
