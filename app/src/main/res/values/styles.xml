<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme -->
    <style name="Theme.Paper" parent="Theme.Paper.Base">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Paper.BottomSheetDialog</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button.OutlinedButton</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Paper.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Paper</item>
    </style>

    <!-- ThemeOverlay -->
    <style name="ThemeOverlay.Paper.BottomSheetDialog" parent="ThemeOverlay.Paper.BottomSheetDialog.Base">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
