<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Widget -->
    <style name="Widget.Paper.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Widget.Paper.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/button</item>
        <item name="android:textColor">@color/button</item>
    </style>

    <style name="Widget.Paper.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!-- TextAppearance -->
    <style name="TextAppearance.Paper.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/mali_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/mali_semi_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/mali_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/mali_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/mali_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Paper.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/mali_medium</item>
