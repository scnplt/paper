<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="dev.sertan.android.paper.util.Utils" />

        <variable
            name="viewModel"
            type="dev.sertan.android.paper.ui.note.NoteViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/gap_2"
            android:paddingBottom="@dimen/gap_9">

            <LinearLayout
                gone="@{viewModel.editable}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{@string/last_update_date(viewModel.updateDate)}"
                    android:textAlignment="textStart"
                    android:textAppearance="?attr/textAppearanceBody2"
                    tools:text="Last update\n02/01/2021" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{@string/create_date(viewModel.createDate)}"
                    android:textAlignment="textEnd"
                    android:textAppearance="?attr/textAppearanceBody2"
                    tools:text="Create\n01/01/2021" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/gap_3"
                android:background="@android:color/transparent"
                android:enabled="@{viewModel.editable}"
                android:hint="@string/title"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@={viewModel.note.title}"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline4"
                tools:ignore="LabelFor"
                tools:text="@tools:sample/lorem" />

            <EditText
                android:id="@+id/editTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_2"
                android:background="@android:color/transparent"
                android:enabled="@{viewModel.editable}"
                android:hint="@string/content"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:text="@={viewModel.note.content}"
                android:textAppearance="?attr/textAppearanceBody1"
                tools:ignore="LabelFor"
                tools:text="@tools:sample/lorem/random" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
